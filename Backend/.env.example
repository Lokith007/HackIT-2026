# ──────────────────────────────────────────────
# UIDAI Auth API Configuration
# ──────────────────────────────────────────────
UIDAI_AUTH_URL=https://auth.uidai.gov.in/2.5/
AUA_CODE=your_aua_code
SUB_AUA_CODE=your_sub_aua_code
ASA_LICENSE_KEY=your_asa_license_key
UIDAI_PUBLIC_KEY_PATH=./keys/uidai_public_key.pem

# ──────────────────────────────────────────────
# Security
# ──────────────────────────────────────────────
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=30m

# ──────────────────────────────────────────────
# Server
# ──────────────────────────────────────────────
PORT=4000

# PostgreSQL (Neon DB)
PG_HOST=ep-purple-hill-a1snayvc-pooler.ap-southeast-1.aws.neon.tech
PG_PORT=5432
PG_DATABASE=your_database_name
PG_USER=your_user_name
PG_PASSWORD=your_password

# SMS OTP (FAST2SMS / Twilio)
SMS_SERVICE=FAST2SMS
SMS_API_KEY=your_fast2sms_api_key
SETU_KYC_BASE_URL=https://bridge.sandbox.setu.co/okyc/v1
DEMO_PHONE_NUMBER=your_mobile_number
AA_BASE_URL=https://aa-sandbox.example.com/v2
AA_CLIENT_ID=your_aa_client_id
AA_CLIENT_API_KEY=your_aa_api_key
AA_PRIVATE_KEY_PATH=./keys/fiu_private_key.pem

# ──────────────────────────────────────────────
# BBPS Aggregator (Setu / Decentro)
# ──────────────────────────────────────────────
BBPS_BASE_URL=https://bbps-sandbox.setu.co/v1
BBPS_API_KEY=your_bbps_api_key
BBPS_API_SECRET=your_bbps_api_secret
BBPS_PRODUCT_ID=your_bbps_product_id

# ──────────────────────────────────────────────
# GST Suvidha Provider
# ──────────────────────────────────────────────
GSP_BASE_URL=https://gst-sandbox.setu.co/v1
GSP_API_KEY=your_gsp_api_key
GSP_API_SECRET=your_gsp_api_secret
GSP_PRODUCT_ID=your_gsp_product_id

# ──────────────────────────────────────────────
# Social OAuth — LinkedIn
# ──────────────────────────────────────────────
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:4000/social/oauth/linkedin/callback

# ──────────────────────────────────────────────
# Social OAuth — X (Twitter)
# ──────────────────────────────────────────────
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:4000/social/oauth/twitter/callback

